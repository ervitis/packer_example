{
  "provisioners": [
    {
      "type": "shell",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh"
          ]
        }
      }
    },
    {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "local.yml",
      "group_vars": "ansible/vars",
      "role_paths": [
        "ansible/roles/rol-docker",
        "ansible/roles/rol-dns"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "my_virtualbox.box"
        },
        "amazon-ebs": {
          "output": "my_new_ami.box"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "3s",
      "disk_size": 16000,
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirror.softaculous.com/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "1795184136b8bdddabe50453cc2cc2d46f0f7c5e",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20000s",
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "256"],
        ["modifyvm", "{{ .Name }}", "--cpus", "2"]
      ]
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "ami_name": "centos-ami-build-{{ timestamp }}",
      "region": "{{ user `aws_region` }}",
      "instance_type": "{{ user `aws_instance_type` }}",
      "ssh_username": "centos",
      "security_group_id": "sg-xxxxxx",
      "subnet_id": "subnet-xxxx",
      "tags": {
        "Name": "AMI virtual machine"
      },
      "vpc_id": "vpc-xxxxx"
    }
  ]
}
