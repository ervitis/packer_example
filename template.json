{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{ .Path }}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "install_scripts/base.sh",
            "install_scripts/vagrant.sh",
            "install_scripts/virtualbox.sh",
            "install_scripts/cleanup.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "install_scripts/base.sh",
            "install_scripts/vagrant.sh"
          ]
        }
      }
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible/local.yml",
      "group_vars": "./ansible/vars",
      "role_paths": [
        "./ansible/roles"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "my_virtualbox.box"
        },
        "amazon-ebs": {
          "output": "my_new_ami.box"
        }
      }
    }
  ],
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "eu-west-1",
    "aws_subnet_id": "",
    "aws_security_group_id": "",
    "aws_instance_type": "t2.micro",
    "aws_source_ami": "ami-e4ff5c93"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab>text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "7s",
      "disk_size": 8000,
      "guest_os_type": "RedHat_64",
      "iso_url": "http://mirror.softaculous.com/centos/7/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
      "iso_checksum": "1795184136b8bdddabe50453cc2cc2d46f0f7c5e",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "1024"],
        ["modifyvm", "{{ .Name }}", "--cpus", "1"]
      ],
      "ssh_pty": true,
      "headless": false,
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'"
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "ami_name": "centos-ami-build-{{ timestamp }}",
      "ami_description": "prueba packer",
      "region": "{{ user `aws_region` }}",
      "instance_type": "{{ user `aws_instance_type` }}",
      "ssh_username": "centos",
      "security_group_id": "{{ user `aws_security_group_id` }}",
      "subnet_id": "{{ user `aws_subnet_id` }}",
      "tags": {
        "Name": "AMI virtual machine"
      },
      "vpc_id": "{{ user `aws_vpc_id` }}",
      "source_ami": "{{ user `aws_source_ami` }}",
      "ssh_pty": true,
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "8",
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "8",
          "delete_on_termination": true
        }
      ],
      "force_deregister": true
    }
  ]
}
